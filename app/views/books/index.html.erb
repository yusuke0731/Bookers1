<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
	</thead>
	<tbody>
	<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to 'show' ,book_path(book) %></td>
			<td><%= link_to 'edit' ,edit_book_path(book) %></td>
			<td><%= link_to 'destroy' ,book_path(book), method: :delete, date: {confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
	</tbody>

</table>
<% if @book.errors.any? %>
  <div class="alert alert-warning">
  	<h3>
  		<%= @book.errors.count %> error prohibited this book from being saved:
  	</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2>New book</h2>
<%= form_for(@book, url: books_path) do |f| %>

 <h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<% end %>
